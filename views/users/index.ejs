<!DOCTYPE html>
<html>

<head>
  <title> List </title>
  <link rel='stylesheet' href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
    crossorigin="anonymous"></script>
  <script type="text/javascript" src="/javascripts/delete_user.js"></script>
</head>

<body>
  <nav class="navbar navbar-dark bg-primary">
    <a class="navabar-brand" href="#">Fixed top</a>
    <h1>Contact Management</h1>
    <div class="btn btn-light btn-group btn-group-justified">
      <a href="/users" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Index</a>
      <a href="/users/user" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">New</a>
    </div>
  </nav>


  <div class="container">
    <h1>Contact List</h1>
    <% if(users.length>0) { %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i<users.length;i++) { %>
            <tr>
              <td>
                <%= users[i].name%>
              </td>
              <td>
                <%= users[i].email%>
              </td>
              <td>
                <%= users[i].phone%>
              </td>
              <td>
                <a href="/users/user/<%= users[i]._id%>">
                  Details
                </a>
              </td>
              <td>
                  <a href="/users/user/<%= users[i]._id%>">
                    Edit
                  </a>
                </td>
              <td>
                <button class="deleteButton" data-uid="<%= users[i]._id%>">
                  Delete
                </button>
              </td>
            </tr>
            <% } %>
        </tbody>
      </table>
      <% } else { %>
        <div>No users found.</div>
        <% } %>
  </div>
</body>

</html>